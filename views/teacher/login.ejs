<%- include('../partials/header', { title: 'Teacher Login' }) %>

<div class="form">
  <!-- Top Right Button -->
  <button class="button-top-right">Help</button>

  <!-- Teacher Login Panel -->
  <div class="form-panel active">
    <div class="form-header">
      <h1>Teacher Login</h1>
    </div>

    <!-- Error Message (if any) -->
    <% if (message) { %>
      <p class="error-message"><%= message %></p>
    <% } %>

    <!-- Login Form -->
    <form action="/teacher/login" method="POST" class="form-group">
      <label for="email">Email:</label>
      <input type="email" name="email" id="email" required>
    

   
      <label for="password">Password:</label>
      <input type="password" name="password" id="password" required>
    

    <!-- Submit Button -->
      <div class="form-group">
        <button type="submit">Login</button>
      </div>
    </form>

    <!-- Navigation to Other Logins -->
    <div class="form-footer">
      <a href="/student/login" class="toggle-btn">Go to Student Login</a>
      
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
