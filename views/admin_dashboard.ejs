<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Dashboard</title>
  <style>
    /* Basic styling for the dashboard */
    body {
      background: linear-gradient(45deg, rgba(66, 183, 245, 0.8) 0%, rgba(66, 245, 189, 0.4) 100%);
    color: rgba(0, 0, 0, 0.6);
    
    
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #f7f7f7;
    }
    h1, h2 {
      text-align: center;
      color: #333;
    }
    .button-group {
      text-align: center;
      margin-bottom: 20px;
    }
    button {
      padding: 10px 15px;
      margin: 10px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
      background-color: #fff;
    }
    table, th, td {
      border: 1px solid #ccc;
    }
    th, td {
      padding: 12px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4);
    }
    .modal-content {
      background-color: white;
      margin: 5% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 60%;
      border-radius: 8px;
    }
    .modal label {
      margin-top: 10px;
      display: block;
      font-weight: bold;
    }
    .modal input, .modal select {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      margin-bottom: 15px;
      box-sizing: border-box;
    }
    .modal button.submit-btn {
      width: 100%;
      padding: 10px;
      background-color: #28a745;
      border: none;
      color: white;
      cursor: pointer;
    }
    .modal button.submit-btn:hover {
      background-color: #218838;
    }
    .modal button.close-btn {
      background-color: red;
      padding: 10px;
      border: none;
      color: white;
      cursor: pointer;
      width: 100%;
      border-radius: 4px;
    }
    .modal button.close-btn:hover {
      background-color: #c82333;
    }
    .error-message {
      color: red;
      text-align: center;
      margin-bottom: 20px;
    }
    .subject-fields {
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 4px;
    }
    .subject-fields h4 {
      margin-top: 0;
    }
    .remove-subject {
      background-color: #dc3545;
      color: white;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
      border-radius: 4px;
      float: right;
    }
    .remove-subject:hover {
      background-color: #c82333;
    }
    

    .button-top-right {
      position: absolute;
      top: 20px;
      right: 20px; 
      background-color: #4285F4;
      color: #FFFFFF;
      border: none; 
      border-radius: 4px; 
      padding: 10px 15px; 
      cursor: pointer; 
      z-index: 1000; 
    }
  
  </style>
</head>
<body>
  <h1>Admin Dashboard</h1> 
  <button class="button-top-right"> <a href="/admin/logout">Logout</a></button>


  <!-- Display Error Message if Exists -->
  <% if (typeof error !== 'undefined') { %>
    <div class="error-message"><%= error %></div>
  <% } %>
  
  <!-- Button Group: Create Class, Add Teacher, Create Course -->
  <div class="button-group">
    <button onclick="document.getElementById('createClassModal').style.display='block'">Create Class</button>
    <button onclick="document.getElementById('createTeacherModal').style.display='block'">Add Teacher</button>
    <button onclick="document.getElementById('createCourseModal').style.display='block'">Create Course</button>
  </div>

  <!-- Classes Table -->
  <h2>Classes</h2>
  <table>
    <tr>
      <th>Class Name</th>
      <th>Course</th>
      <th>Teacher</th>
      <th>Actions</th>
    </tr>
    <% classes.forEach((cls) => { %>
      <tr>
        <td><%= cls.name %></td>
        <td><%= cls.Course ? cls.Course.name : 'No Course Assigned' %></td>
        <td><%= cls.Teacher ? cls.Teacher.name : 'No Teacher Assigned' %></td>
        <td>
          <button onclick="document.getElementById('addStudentModal-<%= cls.id %>').style.display='block'">Add Student</button>
          <!--<button onclick="document.getElementById('assignMarksModal-<%= cls.id %>').style.display='block'">Assign Marks</button>-->
        </td>
      </tr>

      <!-- Add Student Modal for Each Class -->
      <div id="addStudentModal-<%= cls.id %>" class="modal">
        <div class="modal-content">
          <h3>Add Student to <%= cls.name %></h3>
          <form action="/admin/add-student" method="POST">
            <input type="hidden" name="classId" value="<%= cls.id %>">
            <label for="studentName">Student Name:</label>
            <input type="text" name="studentName" required>
            <label for="rollNo">Seat No:</label>
            <input type="text" name="rollNo" required>

            <button type="submit" class="submit-btn">Add Student</button>
          </form>
          <button class="close-btn" onclick="document.getElementById('addStudentModal-<%= cls.id %>').style.display='none'">Close</button>
        </div>
      </div>

      <!-- Assign Marks Modal for Each Class -->
      <div id="assignMarksModal-<%= cls.id %>" class="modal">
        <div class="modal-content">
          <h3>Assign Marks to Students in <%= cls.name %></h3>
          <form action="/admin/assign-marks" method="POST">
            <input type="hidden" name="classId" value="<%= cls.id %>">
            
            <label for="studentId">Select Student:</label>
            <select name="studentId" required>
              <% cls.Students.forEach((student) => { %>
                <option value="<%= student.id %>"><%= student.name %> (Roll No: <%= student.rollNo %>)</option>
              <% }) %>
            </select>
            
            <label for="subjectId">Select Subject:</label>
              <select name="subjectId" required>
                <% if (cls.Course && cls.Course.subjects && cls.Course.subjects.length > 0) { %>
                  <% cls.Course.subjects.forEach((subject) => { %>
                    <option value="<%= subject.id %>"><%= subject.name %></option>
                  <% }) %>
                <% } else { %>
                  <option disabled>No subjects available for this course</option>
                <% } %>
              </select>

    
            <label for="marksInternal">Internal Marks:</label>
            <input type="number" name="marksInternal" min="0" max="100" required>
            
            <label for="marksExternal">External Marks:</label>
            <input type="number" name="marksExternal" min="0" max="100" required>
            
            <label for="marksPractical">Practical Marks:</label>
            <input type="number" name="marksPractical" min="0" max="100" required>
            
            <button type="submit" class="submit-btn">Assign Marks</button>
          </form>
          <button class="close-btn" onclick="document.getElementById('assignMarksModal-<%= cls.id %>').style.display='none'">Close</button>
        </div>
      </div>
    <% }) %>
  </table>

  <!-- Subjects Table -->
  <h2>Subjects</h2>
  <table style="width: 500px;">
    <tr>
      <th>Subject Name</th>
      <th>Course</th>
    </tr>
    <% subjects.forEach((subject) => { %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.Course ? subject.Course.name : 'No Course Assigned' %></td>
       
      </tr>
    <% }) %>
  </table>

  <!-- Create Class Modal -->
  <div id="createClassModal" class="modal">
    <div class="modal-content">
      <h3>Create a New Class</h3>
      <form action="/admin/create-class" method="POST">
        <label for="name">Class Name:</label>
        <input type="text" name="name" required>
      
        <label for="courseId">Select Course:</label>
        <select name="courseId" required>
          <% if (courses && courses.length > 0) { %>
            <% courses.forEach((course) => { %>
              <option value="<%= course.id %>"><%= course.name %></option>
            <% }) %>
          <% } else { %>
            <option disabled>No courses available</option>
          <% } %>
        </select>

        <!-- Teacher Selection Dropdown -->
        <label for="teacherId">Select Teacher:</label>
        <select name="teacherId" required>
          <% if (teachers && teachers.length > 0) { %>
            <% teachers.forEach((teacher) => { %>
              <option value="<%= teacher.id %>"><%= teacher.name %></option>
            <% }) %>
          <% } else { %>
            <option disabled>No teachers available</option>
          <% } %>
        </select>
        <!-- End of Teacher Selection Dropdown -->

        <button type="submit" class="submit-btn">Create Class</button>
      </form>
      <button class="close-btn" onclick="document.getElementById('createClassModal').style.display='none'">Close</button>
    </div>
  </div>

  <!-- Create Teacher Modal -->
  <div id="createTeacherModal" class="modal">
    <div class="modal-content">
      <h3>Create a New Teacher</h3>
      <form action="/admin/create-teacher" method="POST">
        <label for="teacherName">Teacher Name:</label>
        <input type="text" name="teacherName" required>
        
        <label for="teacherEmail">Teacher Email:</label>
        <input type="email" name="teacherEmail" required>
        
        <label for="teacherPhone">Teacher Phone:</label>
        <input type="text" name="teacherPhone" pattern="\d{10,15}" title="Phone number must be between 10 and 15 digits" >
        
        <label for="teacherDepartment">Department:</label>
        <input type="text" name="teacherDepartment">
        
        <label for="teacherPassword">Password:</label>
        <input type="text" name="teacherPassword">
        
        <button type="submit" class="submit-btn">Create Teacher</button>
      </form>
      <button class="close-btn" onclick="document.getElementById('createTeacherModal').style.display='none'">Close</button>
    </div>
  </div>                                                                      

  <!-- Create Course Modal -->
  <div id="createCourseModal" class="modal">
    <div class="modal-content">
      <h3>Create a New Course</h3>
      <form action="/admin/create-course" method="POST" id="createCourseForm">
        <label for="courseName">Course Name:</label>
        <input type="text" name="courseName" id="courseName" required>

        <div id="subjectsContainer">
          <h4>Subjects:</h4>
          <div class="subject-fields">
            <button type="button" class="remove-subject" onclick="removeSubject(this)">Remove</button>
            <label for="subjectName">Subject Name:</label>
            <input type="text" name="subjectName[]" required>
            <!-- Marks fields are optional -->
            
          </div>
        </div>
        <button type="button" onclick="addSubject()">Add Another Subject</button>

        <button type="submit" class="submit-btn">Create Course</button>
      </form>
      <button class="close-btn" onclick="document.getElementById('createCourseModal').style.display='none'">Close</button>
    </div>
  </div>
                                                                       

  <script>
    // Function to close modals when clicking outside of them
    window.onclick = function(event) {
      var modals = document.getElementsByClassName('modal');
      for (var i = 0; i < modals.length; i++) {
        if (event.target == modals[i]) {
          modals[i].style.display = 'none';
        }
      }
    }

    // Function to add a new subject fieldset
    function addSubject() {
      var subjectsContainer = document.getElementById('subjectsContainer');
      var newSubject = document.createElement('div');
      newSubject.className = 'subject-fields';
      newSubject.innerHTML = `
        <button type="button" class="remove-subject" onclick="removeSubject(this)">Remove</button>
         <label for="subjectName">Subject Name:</label>
        <input type="text" name="subjectName[]" required>
      `;
      subjectsContainer.appendChild(newSubject);
    }

    // Function to remove a subject fieldset
    function removeSubject(button) {
      var subjectFields = button.parentElement;
      subjectFields.remove();
    }
  </script>
</body>
</html>
